{% if obj_type == "issue" %}
    {% set final_url = resolve_front_url("issue", obj.project.slug, obj.ref) %}
    {{ _("New Issue created: ") }} <b><a href="{{final_url}}">#{{obj.ref}}: {{obj.subject}}</a></b>
{% elif obj_type == "task" %}
    {% set final_url = resolve_front_url("task", obj.project.slug, obj.ref) %}
    {{ _("New Task created: ") }} <b><a href="{{final_url}}">#{{obj.ref}}: {{obj.subject}}</a></b>
{% elif obj_type == "userstory" %}
    {% set final_url = resolve_front_url("userstory", obj.project.slug, obj.ref) %}
    {{ _("New User Story created: ") }} <b><a href="{{final_url}}">#{{obj.ref}}: {{obj.subject}}</a></b>
{% elif obj_type == "wikipage" %}
    {% set final_url = resolve_front_url("wikipage", obj.project.slug, obj.slug) %}
    {{ _("New Wiki Page created: ") }} <b><a href="{{final_url}}">{{obj.slug}}</a></b>
{% elif obj_type == "milestone" %}
    {% set final_url = resolve_front_url("taskboard", obj.project.slug, obj.slug) %}
    {{ _("New Sprint: ") }} <b><a href="{{final_url}}">{{obj.name}}</a></b>
    from: <b>{{obj.estimated_start}}</b> to: <b>{{ obj.estimated_finish }}</b>
{% endif %}
